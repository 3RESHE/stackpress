{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": [ "es2021", "es7", "es6", "dom" ],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "../stackpress/",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "paths": {
      "@/i18n": [ "./src/i18n/index" ],
      "@/i18n/*": [ "./src/i18n/*" ],
      "@/plugins/*": [ "./src/plugins/*" ],
      "@/template/*": [ "./src/template/*" ],
      "@/schema/*": [ "./src/schema/*" ],
      "@/server/*": [ "./src/server/*" ],
      "@/sql/*": [ "./src/sql/*" ],
      "@/terminal/*": [ "./src/terminal/*" ],
      "@/types": [ "./src/types" ],
      "@/Exception": [ "./src/Exception" ]
    }
  },
  "include": [ "src/**/*.ts" ],
  "exclude": [ "dist", "docs", "node_modules", "test"]
}
